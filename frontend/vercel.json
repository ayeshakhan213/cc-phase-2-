{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "nodeVersion": "20.x",
  "env": {
    "NEXT_PUBLIC_API_BASE_URL": {
      "description": "Backend API base URL. Set to your DigitalOcean backend server URL.",
      "example": "https://api.glamcart.com",
      "required": true
    }
  },
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  }
}
